<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>

<body>
{{>navbar}}
<section class="container-fluid">
    <div class="register-banner ">
        <div class="container">
            <div class="row mb-5 pb-5">
                <div class="col-md-4 mt-5 mb-5">
                    <div class="register-form">
                        <div class="text-center">
                            <h2 class="primary-color">User Login</h2>
                        </div>
                        <form class="form" action="/login" method="post">
                            <div class="mx-2">
                                <input type="text"  class="form-control mt-3" name="identifier" id="" placeholder="Enter email / username">
                                <input  type="password"  class="form-control mt-3" name="password" id="" placeholder="Enter password">
                            </div>

                            <div class="text-right">
                                <button type="submit" class="main-btn mt-3 mx-4 mb-1">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

</body>

</html>
{{#if invalid}}
    <script>
        Swal.fire({
            title: 'Something is wrong!',
            text: 'Invalid email or password. Try again.',
            icon: 'error',
            confirmButtonText: 'Ok!'
        })
    </script>
{{/if}}
{{#if logout}}
    <script>
        Swal.fire({
            title: 'You have successfully logged out.',
            icon: 'success',
            confirmButtonText: 'Ok!'
        })
    </script>
{{/if}}
{{#if loginFirst}}
    <script>
        Swal.fire({
            title: 'Please Login First!',
            text:'You need to login to access this page.',
            icon: 'info',
            confirmButtonText: 'Ok!'
        })
    </script>
{{/if}}
{{#if newRegister}}
    <script>
        Swal.fire({
            title: 'Register success full!',
            text:'Please login using your account credentials.',
            icon: 'success',
            confirmButtonText: 'Ok!'
        })
    </script>
{{/if}}