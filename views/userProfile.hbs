<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>

<body>
    {{> navbar}}
    <section>
        <div class="container-fluid pb-5">
            {{#if (eq user.role 'customer')}}
                {{> userbar}}
            {{/if}}

            <div class="container userSection">
                <div class="row">
                    <div class="col-md-3 offset-md-3">
                        <div class="text-center">
                            <img class="img-fluid" src="/image/web_photos/user_default.png"
                                 alt="">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card py-md-5 px-md-5 px-1">
                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="text-muted">Name : </h4>
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-muted">{{user.name}}</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="text-muted">Email : </h4>
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-muted">{{user.email}}</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="text-muted">Phone Number : </h4>
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-muted">{{user.phoneNumber}}</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <h4 class="text-muted">Address : </h4>
                                </div>
                                <div class="col-md-8">
                                    <h4 class="text-muted">{{user.address}}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>